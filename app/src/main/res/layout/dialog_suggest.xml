<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:elevation="@dimen/dp_7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="@string/checkesuggest"
            android:textColor="@color/black_87"
            android:textSize="@dimen/sp_13" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_sug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_30"
            android:background="@drawable/edt_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="@string/othersuggest"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_54"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:maxLines="6"
            android:singleLine="false" />

        <Button
            android:id="@+id/re_commit"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/btn_commit_bg"
            android:text="@string/query"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center" />


    </LinearLayout>
</layout>