<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="SnObserver"
            type="youdian.apk.ipqc.obsever.InsCheckSnObserver" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sn"
                android:textColor="@color/gray_87"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_87"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="@string/checkresult"
            android:textColor="@color/black_87"
            android:textSize="@dimen/sp_14" />

        <RadioGroup
            android:id="@+id/rg_chouyang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_yes"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/rb_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="合格"
                android:textColor="@color/bg_textcolor_action"
                android:textSize="@dimen/sp_14" />

            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_24"
                android:background="@drawable/rb_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="不合格"
                android:textColor="@color/bg_textcolor_action"
                android:textSize="@dimen/sp_14" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/ll_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_7"
                android:text="@string/exnote"
                android:textColor="@color/black_87"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/edt_sn_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/F1F5F7"
                android:hint="@string/exnote_tip"
                android:minHeight="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/black_54"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </LinearLayout>
</layout>