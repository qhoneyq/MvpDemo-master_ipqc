<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_666666">

    <RelativeLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_160"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_popwindow">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_pop"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/icon_green"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"/>



        <TextView
            android:id="@+id/tv_offtime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="5秒后页面自动关闭"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/tv_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_87"
            android:textSize="@dimen/sp_14"
            android:text="ssss"
            android:gravity="center"
            android:layout_above="@id/tv_offtime"/>

    </RelativeLayout>

</RelativeLayout>