    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--涟漪控件属性-->
    <declare-styleable name="mRippleView">
        <attr name="cColor" format="color"/>
        <attr name="cSpeed" format="integer"/>
        <attr name="cDensity" format="integer"/>
        <attr name="cIsFill" format="boolean"/>
        <attr name="cIsAlpha" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomHeaderView">
        <attr name="title_background" format="color|reference"/>
        <attr name="left_icon" format="reference"/>
        <attr name="title_text" format="string"/>
        <attr name="title_text_size" format="dimension"/>
        <attr name="title_text_color" format="color"/>
        <attr name="title_text_hint_color" format="color"/>
        <attr name="showLeftIcon" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LineDraw">
        <attr name="hint" format="string" />
        <attr name="name" format="string" />
        <attr name="explain" format="string" />
        <attr name="textcolor" format="color" />
    </declare-styleable>

</resources>
